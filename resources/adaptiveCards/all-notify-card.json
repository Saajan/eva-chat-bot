{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "backgroundImage": "https://via.placeholder.com/150/FF0000/FFFFFF?Text=Alert",
  "fallbackText": "Broadcast message sent",
  "body": [
    {
      "speak": "Broadcast Message.",
      "type": "ColumnSet",
      "style": "emphasis",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "type": "TextBlock",
              "text": "extraLarge"
            },
            {
              "type": "TextBlock",
              "text": "",
              "weight": "bolder",
              "size": "large"
            },
            {
              "type": "TextBlock",
              "text": "",
              "size": "small",
              "isSubtle": true
            }
          ]
        },
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "Image",
              "url": "https://via.placeholder.com/150/FF0000/FFFFFF?Text=Alert",
              "size": "auto"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Get more Details",
      "url": "http://localhost:3000"
    }
  ]
}
