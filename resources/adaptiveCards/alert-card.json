{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
      {
        "speak": "Tom's Pie is a Pizza restaurant which is rated 9.3 by customers.",
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "width": 2,
            "items": [
              {
                "type": "TextBlock",
                "text": "${step.values.name}"
              },
              {
                "type": "TextBlock",
                "text": "${step.values.value}",
                "weight": "bolder",
                "size": "extraLarge",
                "spacing": "none"
              },
              {
                "type": "TextBlock",
                "text": "${step.values.condition}",
                "size": "small",
                "wrap": true,
                "maxLines": 3
              }
            ]
          },
          {
            "type": "Column",
            "width": 1,
            "items": [
              {
                "type": "Image",
                "url": "${image}",
                "size": "auto"
              }
            ]
          }
        ]
      }
    ]
  }
  