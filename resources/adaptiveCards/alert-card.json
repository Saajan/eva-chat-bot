{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [{
    "speak": "textToToggle",
    "type": "ColumnSet",
    "id": "textToToggle",
    "columns": [{
      "type": "Column",
      "width": 2,
      "items": [{
          "type": "TextBlock",
          "text": "Title"
        },
        {
          "type": "TextBlock",
          "text": "Alert1",
          "weight": "bolder",
          "size": "extraLarge",
          "spacing": "none"
        }
      ]
    }]
  }],
  "actions": [{
    "type": "Action.ToggleVisibility",
    "title": "Delete Alert",
    "targetElements": ["textToToggle"]
  }]
}